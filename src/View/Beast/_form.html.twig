<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="title">Name :</label>
            <input type="text" class="form-control" name="name" value="{{ beast.name }}">
        </div>
        <div class="form-group col-md-6">
            <label for="area">Area :</label>
            <input type="text" class="form-control" name="area" value="{{ beast.area }}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="area">Picture :</label>
            <input type="url" class="form-control" name="picture" id="picture" value="{{ beast.picture }}"/>
        </div>
        <div class="form-group col-md-6">
            <label for="size">Size (in meter):</label>
            <input type="number" class="form-control" name="size" id="size" value="{{ beast.size }}"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="planet">Planet :</label>
            <select name="planet" class="custom-select" id="planet">
                {%  for planet in planets %}
                <option value="{{ planet.id }}" {% if planet.id == beast.id_planet %}selected{% endif %} }>{{ planet.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="movies">Movie :</label>
            <select name="movies" class="custom-select" id="movies">
                {%  for movie in movies %}
                    <option value="{{ movie.id }}" {% if movie.id == beast.id_movie %}selected{% endif %} }>{{ movie.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-row">x
        <div class="form-group col-12">
            <input type="submit" value="Valider" class="float-right">
        </div>
    </div>
</form>

{% for error in errors %}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
{% endfor %}
  {% for succes in success %}
      <div class="alert alert-success" role="alert">
          {{ succes }}
      </div>
  {% endfor %}
